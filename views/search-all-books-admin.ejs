<div class="books-table search-admin search-admin-all">
  <table>
    <tr>
      <th>Book Cover</th>
      <th>Book Name</th>
      <th>Book ID</th>
      <th>Author Name</th>
      <th>Price</th>
    </tr>
<% if(searchedBooks){ %>
  <% let bookAdded = false; %>
  <% searchedBooks.forEach( (book) => { %>
    <% if(book.book_name.toLowerCase().includes(bookName.toLowerCase())){ %>
      <tr>
        <td><img class="book-img-list" src="<%= book.book_cover_url %>" alt="coding-book"></td>
        <td><p class="book-name-list"><%= book.book_name %></p></td>
        <td><p class="book-name-list"><%= book.book_id %></p></td>
        <td><p class="author-name-list"><%= book.author_name %></p></td>
        <td><p><%= book.price %></p></td>
      </tr>
      <% bookAdded = true; %>
    <% } %>
  <% }); %>
  <% if(bookAdded === false){ %>
    <div class="warning-text">
      No Books found!
    </div>
  <% } %>
<% } else { %>
  <div class="warning-text">
    No Books found!
  </div>
<% } %>
</table>
</div>

