<div class="issue-form">
  <form action="/issue" method="POST">
 <div class="form-group col-md-4">
   <label for="inputText4">Book Name</label>
   <input type="text" name="bookName" value="<%= bookInfo[0] %>" class="form-control" id="inputText4">
   <input type="hidden" name="bookCover" value="<%= bookInfo[3] %>">
 </div>
 <div class="form-group col-md-4">
   <label for="inputText4">Author Name</label>
   <input type="text" name="authorName" value="<%= bookInfo[1] %>" class="form-control" id="inputText4">
 </div>
 <div class="form-group col-md-4">
   <label for="inputText4">Price</label>
   <input type="text" name="price" value="<%= bookInfo[2] %>" class="form-control" id="inputText4">
 </div>
 <div class="form-group col-md-4">
   <label for="inputDate4">Return Date</label>
   <input type="date" name="returnDate" min="<%= minDate %>" value="<%= returnDate %>" class="form-control" id="inputDate4">
 </div>
 <button type="submit" class="btn btn-outline-primary btn-block btn-lg submit-issue">Issue</button>
</form>
</div>

