<div class="book-request-form">
  <% if(bookName && user) { %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Error!</strong> The book named <strong>'<%= bookName %>'</strong> has already been requested by <%= user %>. Check out under View Requests for the status of the book.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } else if(bookName) {%>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Error!</strong> The book named <strong>'<%= bookName %>'</strong> has already been requested by another user. Look forward for the book in a few months.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
    <% } %>
  <form action="/request_a_book" method="POST">
 <div class="form-group col-md-4">
   <label for="inputText4">Book Name</label>
   <input type="text" autocomplete="off" name="book_name" class="form-control" id="inputText4">
 </div>
 <div class="form-group col-md-4">
   <label for="inputText4">Author Name</label>
   <input type="text" autocomplete="off" name="author_name" class="form-control" id="inputText4">
 </div>
 <button type="submit" class="btn btn-outline-primary btn-block btn-lg submit-request">Submit Request</button>
</form>
</div>

